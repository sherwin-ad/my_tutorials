    "    \n",
    "    first_letter = given_word[0]\n",
    "    pig_word = 0\n",
    "    \n",
    "    if first_letter in 'aeiou':\n",
    "        pig_word = given_word + 'ay'\n",
    "    else:\n",
    "        pig_word = given_word[1::] + first_letter +  'ay'   \n",
    "    return pig_word\n"
